# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-this-in-production
API_ENVIRONMENT=development

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# Database Configuration
DATABASE_URL=postgresql://automl_user:automl_password@localhost:5432/automl
REDIS_URL=redis://localhost:6379/0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=./mlruns

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_AUTO_MODE=true
MAX_UPLOAD_SIZE_MB=100
MAX_CONCURRENT_EXPERIMENTS=5

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# LangGraph Configuration
LANGRAPH_CHECKPOINT_INTERVAL=5
LANGRAPH_MAX_ITERATIONS=50
LANGRAPH_MEMORY_TYPE=redis

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300
HUMAN_APPROVAL_TIMEOUT_SECONDS=600